<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidCompound5.Pages.CommunicationPage"
             Title="KOMUNIKASI"
             Background="{StaticResource Primary}">
    <StackLayout Padding="10">
        <ProgressBar x:Name="progressBar"
            Progress="0"
            ProgressColor="White" />
        <Label x:Name="tvMessage"
            Padding="0, 10, 0, 0"
            TextColor="White"
            Text=""
            VerticalOptions="Center" 
            HorizontalOptions="Start" />
        <ActivityIndicator x:Name="indicator" HorizontalOptions="Fill" VerticalOptions="EndAndExpand" Color="{StaticResource White}" 
                           IsRunning="True"
                           IsVisible="False"></ActivityIndicator>
        <Button x:Name="btnStart" Margin="10, 0, 10, 0" Text="Mula"
                TextColor="{StaticResource Black}"
                BackgroundColor="{StaticResource PrimaryDark}"
                HorizontalOptions="Fill"
                FontAttributes="Bold"
                VerticalOptions="EndAndExpand"
                CornerRadius="10" Clicked="btnStart_Clicked">

        </Button>
    </StackLayout>
</ContentPage>