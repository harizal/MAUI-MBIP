<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="AndroidCompound5.Pages.SignaturePage"
             Title="Signature"
             Background="{StaticResource Primary}" Padding="10"
             xmlns:local="clr-namespace:AndroidCompound5.Pages"
             x:DataType="local:SignaturePage">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="saveMenu" IconImageSource="icon_save_actionbar.png" Clicked="saveMenu_Clicked"></ToolbarItem>
        <ToolbarItem x:Name="deleteMenu" IconImageSource="sampah.png" Clicked="deleteMenu_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <Grid ColumnDefinitions="*" RowDefinitions="*">
        <toolkit:DrawingView          
            x:Name="signature"
            Lines="{Binding Lines}"
            LineColor="Red"
            LineWidth="3"
            IsMultiLineModeEnabled="True"
            ShouldClearOnFinish="False"
            IsVisible="Hidden"></toolkit:DrawingView>
        <Image x:Name="imageSignature"
               IsVisible="Hidden"></Image>
    </Grid>
</ContentPage>